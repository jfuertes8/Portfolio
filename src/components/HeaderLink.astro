---
interface Props {
    href: string;
    active: boolean;
}

const { href, active } = Astro.props;
---

<a
    href={href}
    class={active
        ? "px-4 py-2 rounded hover:bg-gray-100 transition-all bg-gray-100 text-sm md:text-base"
        : "px-4 py-2 rounded hover:bg-gray-100 transition-all text-sm md:text-base"}
    ><slot /></a
>
