---
import Layout from "../layouts/Layout.astro";
import ContactButton from "../components/ContactButton.astro";
import LeftSideInfo from "../components/LeftSideInfo.astro";
import NavBar from "../components/NavBar.astro";
---

<Layout title="Portfolio | Javier Fuertes">
    <main class="flex md:flex-row flex-col container md:pt-20 p-5">
        <div class="flex-3 md:p-10 p-5 mb-4">
            <LeftSideInfo />
        </div>
        <hr class="mb-7 md:hidden" />
        <div class="flex-2">
            <NavBar active1={false} active2={false} active3 />
            <div
                class="flex flex-col flex-wrap gap-10 justify-center items-center md:pl-16"
            >
                <img src="/contact.jpg" class="md:w-[300px] w-full" />
                <h2 class="md:w-[400px] text-center">
                    Feel free to contact me through whichever channel you prefer
                </h2>
                <div class="flex gap-10">
                    <ContactButton
                        imageUrl="/telephone.png"
                        href="tel:658545912"
                        content="Call"
                    />
                    <ContactButton
                        imageUrl="/email.png"
                        href="mailto:jfuertes8@gmail.com"
                        content="Email"
                    />
                </div>
            </div>
        </div>
    </main>
</Layout>
