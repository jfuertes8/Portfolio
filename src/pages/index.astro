---
import Layout from "../layouts/Layout.astro";
import HeaderLink from "../components/HeaderLink.astro";
import ProjectCard from "../components/ProjectCard.astro";
import LeftSideInfo from "../components/LeftSideInfo.astro";
import NavBar from "../components/NavBar.astro";
---

<Layout title="Portfolio | Javier Fuertes">
	<main class="flex md:flex-row flex-col container md:pt-20 p-5">
		<div class="flex-3 md:p-10 p-5 mb-4">
			<LeftSideInfo />
		</div>
		<hr class="mb-7 md:hidden" />
		<div class="flex-2">
			<NavBar active1 active2={false} active3={false} />
			<div class="flex flex-col md:flex-row flex-wrap gap-5">
				<ProjectCard
					title="Tidy"
					description="A mobile app frontend for a clothe organizing idea."
					codeDescription="REACT NATIVE"
					firstLogo={false}
					firstLogoLink=""
					alt=""
					projectUrl="https://github.com/jfuertes8/tidy"
				/>
				<ProjectCard
					title="Tic Tac Toe"
					description="The typical tic tac toe game made with React."
					codeDescription="REACT"
					firstLogo={false}
					firstLogoLink=""
					alt=""
					projectUrl="https://github.com/jfuertes8/react-tic-tac-toe"
				/>
				<ProjectCard
					title="Basic website"
					description="Landing page and register form styled with Tailwind, and with JS validations."
					codeDescription="TAILWIND / JAVASCRIPT"
					firstLogo
					firstLogoLink="/code-logos/tailwind.png"
					alt="tailwind logo"
					projectUrl="https://github.com/jfuertes8/world-travel"
				/>
				<ProjectCard
					title="eCommerce"
					description="Simple shopping cart and basic login components with Lit."
					codeDescription="LIT"
					firstLogo
					firstLogoLink="/code-logos/lit.png"
					alt="lit logo"
					projectUrl="https://github.com/jfuertes8/lit-shopping-cart"
				/>
				<ProjectCard
					title="Portfolio"
					description="This very website you are looking at."
					codeDescription="ASTRO"
					firstLogo
					firstLogoLink="/code-logos/astro.png"
					alt="astro logo"
					projectUrl="https://github.com/jfuertes8/portfolio"
				/>
			</div>
		</div>
	</main>
</Layout>
